general {
  output_format = "i3bar"
  colors = true
  color_good = "#a1b56c"
  color_bad = "#ab4642"
  color_degraded = "#f7ca88"
}

# order += "cpu_usage"
# order += "cpu_temperature 0"
# order += "disk /"
# order += "read_file uptime"
order += "path_exists VPN"
order += "wireless wlo1"
order += "battery 0"
order += "volume master"
order += "time"

cpu_usage {
  format = "%usage"
  separator = false
}

cpu_temperature 0 {
  format = "%degrees°C"
}

disk "/" {
  format = "%used (%percentage_used)"
  prefix_type = "decimal"
}

read_file uptime {
  color_good = "#d8d8d8"
  path = "/proc/uptime"
}

path_exists VPN {
  # path exists when a VPN tunnel launched by openvpn is active
  path = "/proc/sys/net/ipv4/conf/tun0"
  format = ""
  format_down = ""
  separator = false
}

wireless wlo1 {
  color_good = "#d8d8d8"
  format_up = ""
  format_down = ""
}

battery 0 {
  format = "%status %percentage"
  integer_battery_capacity = true
  status_chr = ""
  status_bat = ""
  status_unk = ""
  status_full = ""
  low_threshold = 10
}

volume master {
  format = "🔈 %volume"
  format_muted = "🔇 %volume"
}

time {
  format = "%d/%m/%Y %H:%M "
}
